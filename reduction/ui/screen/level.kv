#: import Board reduction.component.board.Board
#: import Player reduction.component.player.Player

<LevelCompleteModal>:
    size_hint: None, None
    size: 500, 300
    GridLayout:
        cols: 3
        rows: 2
        Label:
            size: self.parent.size
            text: "Level Complete!"
            text_size: self.size
            font_size: 80
        Button:
            text: 'Level Select'
            on_press: root.load_level_select()

<LevelScreen>:
    id: level_screen
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            size: self.size

    AnchorLayout:
        RelativeLayout:
            id: play_area
            size_hint: None, None
            size: board.size
            level_screen: level_screen
            Board:
                id: board
                player: player
            Player:
                id: player
                board: board

