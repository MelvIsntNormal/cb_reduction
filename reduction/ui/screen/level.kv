#: import Board reduction.component.board.Board
#: import Player reduction.component.player.Player


<LevelScreen>:
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            size: self.size

    AnchorLayout:
        RelativeLayout:
            id: play_area
            size_hint: None, None
            size: board.size
            Board:
                id: board
                player: player
            Player:
                id: player
                board: board
