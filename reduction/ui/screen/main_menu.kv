<MainMenuScreen>:
    Label:
        id: title
        canvas.before:
            Color:
                rgba: 1, 0, 0, 0.5
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: None, None
        text_size: self.width, None
        size: self.texture_size
        halign: 'center'
        valign: 'middle'
        width: 700
        pos_hint: {'center_x': 0.5, 'center_y': 0.65}
        text: "Chronicles Beyond: [b]Reduction[/b]"
        markup: True
        font_size: 80
    Button:
        size_hint: None, None
        pos_hint: {'y': 0.25}
        x: title.x
        width: title.width / 2
        text: 'Play'
        font_size: 60
        on_press: root.load_select_screen()
