<Tile>:
    canvas:
        Color:
            rgba: self.bg_color
        Rectangle:
            size: self.size
            pos: self.pos

<VoidTile>
    canvas.before:
        Color:
            rgba: self.essence
        Rectangle:
            size: self.size
            pos: self.pos
    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Ellipse:
            size: self.size
            pos: self.pos
    Label:
        size_hint: None, None
        size: root.size
        pos: root.pos
        text: str(root.ions)
        font_size: 40
