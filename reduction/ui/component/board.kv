#:import Board reduction.component.board
#:import Tile reduction.component.board

<Tile>:
    canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            size: self.size
            pos: self.pos

<Board>:
    canvas.before:
        Color:
            rgba: 0, 1, 0, 0.5
        Rectangle:
            size: self.size
