<Atom>:
    canvas:
        Color:
            rgba: self.essence
        Ellipse:
            size: self.size
            pos: self.pos
    Label:
        size_hint: None, None
        size: root.size
        pos: root.pos
        text: str(root.ions)
        color: list(map(lambda x: 1 if x == 0 else 0, root.essence[0:3])) + [1]
        font_size: 40
